<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gmail.ndraiman.wifipasswords" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".extras.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_prototype"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.SettingsActivity"
            android:label="@string/action_settings"
            android:parentActivityName=".activities.MainActivity">
        </activity>
        <activity android:name=".fragments.HiddenWifiActivity"
            android:label="@string/activity_title_hidden_wifi"
            android:parentActivityName=".activities.MainActivity">
        </activity>
    </application>

</manifest>
