<resources>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorHighlight</item>
        <!--<item name="android:windowBackground">@android:color/white</item>-->

        <!-- Context Action Mode will Overlay Toolbar -->
        <item name="windowActionModeOverlay">true</item>
        <!--<item name="actionModeBackground">@color/colorPrimary</item>-->

        <item name="android:dialogTheme">@style/InputDialogTheme</item>
        <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>

    </style>


    <!-- Alert Dialog Theme -->
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/AlertDialogTheme.Animation</item>
    </style>

    <style name="AlertDialogTheme.Animation">
        <item name="android:windowEnterAnimation">@anim/shrink_and_fold_in</item>
        <item name="android:windowExitAnimation">@anim/shrink_and_fold_out</item>
        <item name="android:interpolator">@android:interpolator/accelerate_quint</item>
    </style>

    <style name="DeleteDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/DeleteDialogTheme.Animation</item>
    </style>

    <style name="DeleteDialogTheme.Animation">
        <item name="android:windowEnterAnimation">@anim/scale_from_top_right_corner</item>
        <item name="android:windowExitAnimation">@anim/scale_to_top_right_corner</item>
        <item name="android:interpolator">@android:interpolator/accelerate_decelerate</item>
    </style>

    <!-- DialogFragment Theme -->
    <style name="InputDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorHighlight</item>

        <!-- Windows Properties -->
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowAnimationStyle">@style/InputDialogTheme.Animation</item>

    </style>


    <style name="InputDialogTheme.Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_out_bottom</item>
        <item name="android:interpolator">@android:interpolator/anticipate</item>
    </style>

    <!-- FAB -->
    <style name="floating_action_button">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

</resources>
