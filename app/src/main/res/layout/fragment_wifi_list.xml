<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/fragment_main_container"
    android:layout_height="match_parent"
    tools:context="com.gmail.ndraiman.wifipasswords.fragments.WifiListFragment">

    <!-- Wifi List Container -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/main_wifi_list_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- No Root Error TextView -->
    <TextView
        android:id="@+id/text_no_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/text_no_root"
        android:textSize="36sp"
        android:visibility="gone" />

    <!-- LoadFromFile Progress Bar -->
    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/Widget.MaterialProgressBar.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:visibility="gone" />

</FrameLayout>
